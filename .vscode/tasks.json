{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "go-build",
            "type": "shell",
            "command": "go build -o build/ping-grpc ./server && sudo setcap cap_net_raw=ep build/ping-grpc && go build -o build/ping-grpc-client ./client",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "go-build-windows",
            "type": "shell",
            "command": "GOOS=windows GOARCH=amd64 go build -o build/win-ping-grpc.exe ./server && GOOS=windows GOARCH=amd64 go build -o build/win-ping-grpc-client.exe ./client",
            "args": [],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "develop container build",
            "type": "shell",
            "command": "_USER=\"$(id -u):$(id -g)\" docker-compose -f .docker/docker-compose.yml build",
            "problemMatcher": []
            
        },
        {
            "label": "develop container start",
            "type": "shell",
            "command": "_USER=\"$(id -u):$(id -g)\" docker-compose -f .docker/docker-compose.yml up",
            "problemMatcher": []
